<Page x:Class="RetopBot.Pages.PagesFuncs.customFuncs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RetopBot.Pages.PagesFuncs"
      xmlns:gif ="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="customFuncs">
    <Page.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF383838"/>
            <GradientStop Color="#FF353535" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>
    <Grid>
        <Grid Background="Black" Opacity="0.2" Margin="10,10,390,10">
            <Grid.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" Direction="400"/>
            </Grid.Effect>
            
        </Grid>
        <Grid Background="Black" Opacity="0.2" Margin="615,10,10,10">
            <Grid.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" Direction="400"/>
            </Grid.Effect>

        </Grid>
        <Grid Margin="615,10,10,10">
            <Label Content="Автоотправка команд" Foreground="White" Margin="10,10,0,0"
                   VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20"/>
            <ComboBox x:Name="commandsCb" Height="23" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"
                      Margin="10,60,0,0" SelectionChanged="selectcommand"/>
            <TextBox x:Name="timespamcommand" Height="23" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top"
                      Margin="140,60,0,0" BorderBrush="{x:Null}"/>
            <Label Content="Время (в секундах)" HorizontalAlignment="Left" VerticalAlignment="Top"
                      Margin="135,40,0,0" FontSize="6" FontStyle="Italic" Foreground="White"/>
            <Button Content="+" Height="23" Width="23" HorizontalAlignment="Left" VerticalAlignment="Top"
                      Margin="195,60,0,0" BorderBrush="White" Background="{x:Null}" Foreground="#FFC300FF" Click="Button_Click_1"/>
            <Label x:Name="commandLb" Content="Текст команды" HorizontalAlignment="Left" VerticalAlignment="Top"
                      Margin="10,90,0,0" FontSize="12" Foreground="White"/>
            <ScrollViewer Margin="5,120,5,5" VerticalScrollBarVisibility="Hidden" Background="#FF3E3E3E">
                <StackPanel x:Name="parrStack">
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <ListBox x:Name="topUsers" Margin="10,10,405,55" FontSize="24">
           
        </ListBox>
        <Button Width="100" Height="23" Content="Отчет" Margin="495,455,405,22" Click="Button_Click" Background="{x:Null}" Foreground="White" BorderBrush="White"/>
        <ComboBox x:Name="mounthCb" Height="20" Width="130" Margin="0,435,200,0"/>
        <Label Content="Отчеты" Foreground="White" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Left"
               Margin="31,0,0,15"/>
        <Grid x:Name="awaitgrid" Visibility="Hidden" IsEnabled="False">
            <Image gif:AnimationBehavior.SourceUri="/Imgs/waitgif.gif" Margin="15,10,407,123" />
            <Label Content="Считаю" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,300,380,0"/>
        </Grid>
    </Grid>
</Page>
